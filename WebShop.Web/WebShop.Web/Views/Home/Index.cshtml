        .Titled("Article")
        .Filterable(true)
        .Sortable(true);
    col.Add(model => model.ART_Prix)
        .Titled("Prix")
        .Filterable(true)
        .Sortable(true);
    col.Add(model => model.ART_Stock)
        .Titled("Stock")
        .Filterable(true)
        .Sortable(true);
    col.Add()
