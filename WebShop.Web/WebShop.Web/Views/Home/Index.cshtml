               .SetWidth(80);
           col.Add()
               .Sanitized(false)
               .Encoded(false)
               .RenderValueAs(model => Html.ActionLink("Supprimer", "Delete", "Articles", new { id = model.ART_Id }, new { @class = "btn btn-sm btn-danger" }))
               .SetWidth(80);
       }
   }).EmptyText("rien").Sortable(true).Filterable(true).WithPaging(10)

