@section Scripts {

    <script>
        $(document)
            .ready(function() {
                $(".detailsId")
                    .click(function() {
                        //console.log("bouton create click");
                        $.ajax({
                            type: "GET",
                            url: '@Url.Action("Detail", "Articles")',
                            success:
                                function(data) {
                                    $("#myModalcontent").html(data);
                                    $("#myModal").modal("show");
                                }
                        });
                    });
            });
    </script>
}